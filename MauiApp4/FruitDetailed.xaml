<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp4.FruitDetailed"
             Title="FruitDetailed">
    <Grid RowDefinitions="auto, auto, *" Padding="50" RowSpacing="40">
        <Image Grid.Row="0" x:Name="showImage"   />
        <Label Grid.Row="1" x:Name="showName" FontSize="24"/>
        <Label Grid.Row="2" x:Name="showDescription" FontSize="18"/>
    </Grid>
</ContentPage>